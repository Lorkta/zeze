<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zege.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <!-- ItemSource="{Binding Friends}"-->
            <ListView x:Name ="FriendsListView" HeightRequest="200" WidthRequest="410" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>

                                <Image Grid.RowSpan="2" Source="{Binding Image}" Aspect="AspectFill" HeightRequest="60" WidthRequest="60" />
                                <Label Grid.Column="1" Text="{Binding Nick}" LineBreakMode="TailTruncation" FontAttributes="Bold" />
                                <Label Grid.Column="2" Text="{Binding Time}" LineBreakMode="NoWrap" />
                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Message}" LineBreakMode="TailTruncation" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <WebView
                Source="https://www.163.com"
                HeightRequest="300"
                WidthRequest="800"
                HorizontalOptions="Center" 
                />

            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to .NET Multi-platform App UI"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="AddHead"
                Text="AddHead"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnAddHeadClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="AddTail"
                Text="AddTail"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnAddTailClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="RemoveHead"
                Text="RemoveHead"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnRemoveHeadClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="RemoveTail"
                Text="RemoveTail"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnRemoveTailClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
