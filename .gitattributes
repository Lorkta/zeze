# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.c           text eol=lf
*.h           text eol=lf
*.cpp         text eol=lf
*.hpp         text eol=lf
*.java        text eol=lf
*.cs          text eol=lf
*.go          text eol=lf
*.lua         text eol=lf
*.ts          text eol=lf
*.js          text eol=lf
*.xml         text eol=lf
*.gradle      text eol=lf
*.html        text eol=lf
*.mhtml       text eol=lf
*.css         text eol=lf
*.md          text eol=lf
*.txt         text eol=lf
*.log         text eol=lf
*.scriban-txt text eol=lf
# *.json      text eol=lf

# Declare files that will always have CRLF line endings on checkout.
*.sln     text eol=crlf
*.csproj  text eol=crlf
*.vcxproj text eol=crlf
*.njsproj text eol=crlf
*.bat     text eol=crlf
*.cmd     text eol=crlf

# Denote all files that are truly binary and should not be modified.
*.png   binary
*.jpg   binary
*.bmp   binary
*.gif   binary
*.bin   binary
*.dat   binary
*.class binary
*.jar   binary
*.nupkg binary
*.exe   binary
*.dll   binary
*.pdb   binary
*.so    binary
*.dylib binary
*.docx  binary
*.pdf   binary
